[mysqld]
bind-address = 0.0.0.0
port = 3306

# Connection and timeout settings to reduce aborted connection warnings
interactive_timeout = 600
wait_timeout = 600
net_read_timeout = 60
net_write_timeout = 60

# Connection handling improvements
max_connections = 200
max_connect_errors = 100
connect_timeout = 20

# Network packet size (helps with network issues)
max_allowed_packet = 64M

# Reduce logging of connection issues (optional)
log_warnings = 1